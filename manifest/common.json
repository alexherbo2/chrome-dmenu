{
  "manifest_version": 2,
  "name": "dmenu",
  "description": "Tab search with a dmenu filter program",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage"
  ],
  "commands": {
    "tab-search": {
      "description": "Tab search",
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      }
    },
    "bring-tab": {
      "description": "Bring tab",
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      }
    }
  },
  "browser_action": {
    "default_popup": "src/pages/options/index.html"
  },
  "options_ui": {
    "page": "src/pages/options/index.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "packages/suckless.png",
    "48": "packages/suckless.png",
    "128": "packages/suckless.png"
  }
}
